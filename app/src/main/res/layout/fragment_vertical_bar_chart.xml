<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.eazegraph.app.fragments.BarChartFragment">

    <org.eazegraph.lib.charts.VerticalBarChart
        android:id="@+id/verticalbarchart"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:padding="10dp"
        app:egFixedBarHeight="true"
        app:egBarHeight="20dp"
        app:egLegendHeight="40dp"
        android:layout_marginBottom="16dp" />

    <org.eazegraph.lib.charts.VerticalBarChart
        android:id="@+id/verticalbarchart2"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:padding="10dp"
        app:egFixedBarHeight="true"
        app:egBarHeight="20dp"
        app:egLegendHeight="40dp" />


</LinearLayout>
